# AK Beauty - SMTP E-posta Yapılandırması
# Bu dosyayı .env olarak kopyalayın ve kendi bilgilerinizle doldurun

# SMTP Sunucu Ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# E-posta Hesap Bilgileri
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Gönderici ve Alıcı E-posta Adresleri
FROM_EMAIL=your-email@gmail.com
FROM_NAME=AK Beauty Salon
TO_EMAIL=info@yourbusiness.com

# Form Ayarları
CONTACT_FORM_ENABLED=true
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Salon Bilgileri
SALON_NAME=AK Beauty
SALON_ADDRESS=Kadıköy, İstanbul
SALON_PHONE=+90 (212) 555 0123
SALON_EMAIL=info@akbeauty.com

# Çalışma Saatleri
WORKING_HOURS_WEEKDAY=09:00 - 20:00
WORKING_HOURS_WEEKEND=10:00 - 18:00

# Sosyal Medya Linkleri
FACEBOOK_URL=https://facebook.com/akbeauty
INSTAGRAM_URL=https://instagram.com/akbeauty
TWITTER_URL=https://twitter.com/akbeauty
YOUTUBE_URL=https://youtube.com/akbeauty

# SEO Ayarları
SITE_TITLE=AK Beauty - İstanbul Güzellik Salonu
SITE_DESCRIPTION=İstanbul'da profesyonel güzellik hizmetleri
SITE_KEYWORDS=İstanbul kuaför, güzellik salonu, cilt bakımı, manikür pedikür

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=YOUR_PIXEL_ID

# Güvenlik
CSRF_TOKEN_SECRET=your-csrf-secret-key
SESSION_SECRET=your-session-secret-key

# Performans
CACHE_ENABLED=true
CACHE_DURATION=3600
COMPRESSION_ENABLED=true

# Hata Ayıklama
DEBUG_MODE=false
LOG_LEVEL=info 